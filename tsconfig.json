{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "module": "es2020",
    "target": "es2022", //min es2017 because script engine requires for async execution and min es2018 for named capture groups
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "scripthost",
      "es2022",
      "DOM.Iterable"
    ],
    "jsx": "react",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/types.d.ts",
  ]
}